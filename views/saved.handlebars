<nav class="navbar navbar-black bg-black text-center container-fluid" style="background-color: black;">
  <div class="container">
    <a class="navbar-brand container" href="#">
      <img src="/assets/images/nytlogo.gif" width="300" height="100" margin="0" alt="NYT logo">
    </a>
    <div class="container h2">
      <h2>Mongo Scraper Article Search</h2>
    </div>
    <br>
    <div class="container">
      <a href="/saved" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Saved Articles</a>
      <a href="#" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Search for New Articles</a>
      <a href="#" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Clear Article Cache</a>
</nav>
<div class="background-image"> </div>

<div class="container-fluid article-container">
  {{#each articles}}
    <div data-_id={{this._id}} class="card">
      <div class="card-header">
        <h3>
          <a class="article-link" target="_blank" rel="noopener noreferrer" href="{{this.url}}">{{this.headline}}</a>
          <a class="btn btn-danger delete">Delete From Saved</a>
          <a class="btn btn-info notes">Article Notes</a>
        </h3>
      </div>
      <div class="card-body">{{this.summary}}</div>
    </div>
  {{/each}}
  {{#unless articles.length}}
    <div class="alert alert-warning text-center">
      <h4>Uh Oh. Looks like we don't have any saved articles.</h4>
    </div>
    <div class="card">
      <div class="card-header text-center">
        <h3>Would You Like to Browse Available Articles?</h3>
      </div>
      <div class="card-body text-center">
        <h4>
          <a href="/">Browse Articles</a>
        </h4>
      </div>
    </div>
  {{/unless}}
</div>

<footer class="footer">
  <div class="container">
    <p>This project is in no way affilated with the New York Times</p>
  </div>
</footer>

